pipeline {
    agent any

    tools {
        maven 'Maven' 
    }

    stages {
        stage("Test") {
            steps {
                sh 'mvn test'
                echo "Testing stage complete"
            }
        }

        stage("Build") {
            steps {
                sh 'mvn install'
                echo "Build stage complete"
            }
        }

        stage("Deploy on Test") {
            steps {
                withCredentials([usernamePassword(credentialsId: 'tomcat9details', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    deploy adapters: [
                        tomcat9(
                            credentialsId: 'tomcat9details',
                            url: 'http://44.204.55.39:8080',
                            path: '',
                          
                        )
                    ],
                    contextPath: '/app',
                    war: '**/*.war'
                }
                echo "Deployed on Test"
            }
        }

        stage("Deploy on Prod") {
            steps {
                withCredentials([usernamePassword(credentialsId: 'tomcat9details', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    deploy adapters: [
                        tomcat9(
                            credentialsId: 'tomcat9details',
                            url: 'http://52.207.215.251:8080',
                            path: '',
                           
                        )
                    ],
                    contextPath: '/app',
                    war: '**/*.war'
                }
                echo "Deployed on Prod"
            }
        }
    }

    post {
        always {
            echo "========always========"
        }
        success {
            echo "========Execution succeeded========"
        }
        failure {
            echo "========Execution failed========"
        }
    }
}
